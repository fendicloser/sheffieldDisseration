<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_titles" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/temperature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/movent_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="1111"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/humanity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1.0"
            android:background="@drawable/movent_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="1111"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"></VideoView>

        <!--<VideoView-->
            <!--android:background="@color/colorAccent"-->
            <!--android:id="@+id/webview"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"></VideoView>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <!--143.167.236.23-->

            <ImageView
                android:id="@+id/move_forward"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:rotation="270"
                android:src="@drawable/thumbnailpagedown" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/move_left"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:rotation="180"
                    android:src="@drawable/thumbnailpagedown" />

                <ImageView
                    android:id="@+id/move_right"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="80dp"
                    android:src="@drawable/thumbnailpagedown" />
            </LinearLayout>

            <ImageView
                android:id="@+id/move_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:rotation="90"
                android:src="@drawable/thumbnailpagedown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/camera_up"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:rotation="270"
                android:src="@drawable/thumbnailpagedown" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/camera_left"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:rotation="180"
                    android:src="@drawable/thumbnailpagedown" />

                <ImageView
                    android:id="@+id/camera_right"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="80dp"
                    android:src="@drawable/thumbnailpagedown" />
            </LinearLayout>

            <ImageView
                android:id="@+id/camera_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:rotation="90"
                android:src="@drawable/thumbnailpagedown" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>